<h2><%= @restaurant.name %></h2>
<h6><%= @restaurant.address %></h5>
<p><%= @restaurant.category %></p>
<p><%= @restaurant.phone_number %></p>
<hr>
<%= link_to "Write a review", new_restaurant_review_path(@restaurant), class: 'btn btn-primary' %>
<% @restaurant.reviews.each do |review| %>
  <p><%= review.content %> <strong><%= review.rating %> / 5</strong></p>
<% end %>
<hr>
<%= link_to "Return", restaurants_path, class: 'btn btn-secondary' %>
